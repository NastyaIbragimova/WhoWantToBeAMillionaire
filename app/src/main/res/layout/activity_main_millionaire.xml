<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityMillionaire"
    android:background="@drawable/back_game_millionaire">

    <TextView
        android:id="@+id/tv_task_sum_millionaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_exit_millionaire" />

    <TextView
        android:id="@+id/tv_task_millionaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_variant1_millionaire"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_task_sum_millionaire" />

    <TextView
        android:id="@+id/tv_exit_millionaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="Забрать деньги"
        android:onClick="onClickTakeMoneyMillionaire"
        android:textSize="19sp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@drawable/button_millionaire"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_fifty_millionaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:text="50/50"
        android:onClick="onClickFiftyMillionaire"
        android:textSize="19sp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@drawable/button_millionaire"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_variant1_millionaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_millionaire"
        android:gravity="center"
        android:onClick="onClickVariantMillionaire"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_variant3_millionaire"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_variant2_millionaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:onClick="onClickVariantMillionaire"
        android:textSize="19sp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@drawable/button_millionaire"
        app:layout_constraintBottom_toBottomOf="@+id/tv_variant1_millionaire"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_variant3_millionaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:onClick="onClickVariantMillionaire"
        android:textSize="19sp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@drawable/button_millionaire"
        app:layout_constraintBottom_toTopOf="@+id/tv_sum_millionaire"
        app:layout_constraintEnd_toEndOf="@+id/tv_variant1_millionaire"
        app:layout_constraintStart_toStartOf="@+id/tv_variant1_millionaire" />

    <TextView
        android:id="@+id/tv_variant4_millionaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickVariantMillionaire"
        android:textSize="19sp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@drawable/button_millionaire"
        app:layout_constraintBottom_toBottomOf="@+id/tv_variant3_millionaire"
        app:layout_constraintEnd_toEndOf="@+id/tv_variant2_millionaire"
        app:layout_constraintStart_toStartOf="@+id/tv_variant2_millionaire" />


    <TextView
        android:id="@+id/tv_timer_millionaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_sum_millionaire"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_variant3_millionaire" />

    <TextView
        android:id="@+id/tv_sum_millionaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>